<Window x:Class="AISpritePacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Menu Height="20" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
			<MenuItem Header="_File	">
				<MenuItem Header="_New"/>
				<MenuItem Header="_Open"  Click="MenuItem_Click_Open"/>
				<MenuItem Header="_Save"/>
				<Separator />
				<MenuItem Header="_Import" Click="MenuItem_Click_Import"/>
				<MenuItem Header="_Export"/>
				<Separator />
				<MenuItem Header="_Exit"/>
			</MenuItem>
			<MenuItem Header="_Edit	">
			</MenuItem>
		</Menu>

		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="187,25,10,10" Height="auto" Width="auto">
			<Canvas x:Name="Canvas_Sprites" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray" AllowDrop="True" Drop="Canvas_Sprites_Drop"/>
		</ScrollViewer>

	</Grid>
</Window>
